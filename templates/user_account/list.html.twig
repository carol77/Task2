{% extends 'user_account/base_layout.html.twig' %}

{% block user_account %}
    <div class="loader" style="display:none;">
        <i class="fas fa-spinner fa-pulse"></i>
    </div>
    <div class="messages"></div>
    <div id="users">Loading...</div>
{%  endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#users').initDataTables({{ datatable_settings(datatable) }}, {
                searching: false,
                dom: '<"top"l>t<"bottom"ip>',
                columnDefs: [
                    {"title": "Username", "targets": 0},
                    {"title": "Actions", "targets": 1}
                ],
                aDisplayLength: 10,
                aLengthMenu: [[5, 10], [5, 10]]
            }).then(function (dt) {

            });
        });
    </script>
    <script src="{{ asset('js/user.js') }}" type="text/javascript"></script>
{%  endblock %}