{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row">
        <div class="registration-form">

            <span class="registration-form-header">Register to App!</span>

            {{ form_start(registrationForm, {'attr': {novalidate: 'novalidate'}}) }}
            <div class="form-group">
                {{ form_row(registrationForm.username, {attr: {class: 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.password.first, {attr: {class: 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.password.second, {attr: {class: 'form-control'}}) }}
            </div>
            <div class="form-group">
                <button class="register-button btn btn-success col-sm-offset-2">Register</button>
            </div>
            {{ form_end(registrationForm) }}

            <span class="registration-form-info">If you already have an account, <a href="{{ url("login") }}">log in</a>!</span>
        </div>
    </div>

{% endblock %}
